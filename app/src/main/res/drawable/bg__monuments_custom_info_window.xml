<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background_shape">
        <shape android:shape="rectangle">
            <solid android:color="#403E50" />
            <corners android:radius="4dp" />
            <padding
                android:top="8dp"
                android:left="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item android:id="@+id/triangle_shape">
        <shape android:shape="rectangle">
            <solid android:color="#403E50" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>
</layer-list>